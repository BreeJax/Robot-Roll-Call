<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/styles.css">
    <title>User Directory</title>
  </head>
  <body>
    <ul class="users">
      {{#users}}
      <li>
      <img src="{{avatar}}" alt="" height="100" width="100">
      <h3><a href="/info/{{id}}-{{username}}">{{name}}</a></h3>
      <!-- / absolute path, . is relative path  -->
      <!-- if there is a job -->
      {{#job}}
      <p>
        {{job}}, {{company}}
      </p>
      {{/job}}
      <!-- if there is no job, related to if/else -->
      {{^job}}
      <p class="funemployed"> Available for Hire</p>
      {{/job}}
      {{#skills}}
      {{.}}
<!-- . means get the things in the string -->
      {{/skills}}
      {{^skills}}
      <p>no skills, so sad</p>
      {{/skills}}
      </li>
      {{/users}}
    </ul>
    <form class="newRobot" action="/robot" method="post">
      <h3>New Robot Information</h3>
      <input type="text" name="username" placeholder="username" value="{{username}}" required>
      <input type="text" name="imagery" placeholder="image URL here" value="{{imagery}}" required>
      <input type="email" name="email" placeholder="Email" value="{{email}}">
      <input type="text" name="university" placeholder="University" value="{{university}}">
      <input type="text" name="street-number" placeholder="street-number" value="{{street-number}}">
      <input type="text" name="address" placeholder="street-name" value="{{address}}">
      <input type="text" name="city" placeholder="city" value="{{city}}">
      <input type="text" name="state" placeholder="state" value="{{state}}">
      <input type="text" name="postal_code" placeholder="postal_code" value="{{postal_code}}">
      <input type="text" name="job" placeholder="job" value="{{job}}">
      <input type="text" name="company" placeholder="company" value="{{company}}">
      <input type="text" name="year_built" placeholder="Year Created" value="{{year_built}}">
      <input type="text" name="next_service_date" placeholder="Year-Month-Day" value="{{next_service_date}}">
        <div class="">
        <h4>Is the Robot Active?</h4>
          <input type="radio" name="is_active" id="true" value="{{TRUE}}">
          <label for="true">Yes</label>
          <input type="radio" name="is_active" id="false" value="{{FALSE}}">
          <label for="false">No</label>
        </div>
    </form>

  </body>
</html>
